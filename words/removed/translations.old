CREATE TABLE words.translations (
	id serial primary key,
	sentence_code char(8) NOT NULL REFERENCES words.sentences(code),
	lang char(2) not null,
	translated_by smallint REFERENCES words.translators(id),
	reviewed_by smallint REFERENCES words.translators(id),
	state varchar(6) DEFAULT 'new', -- 'new', 'review', 'done', 'wait'
	translation text,
	question text,  -- translator has a question about this
	UNIQUE (sentence_code, lang)
);
CREATE INDEX translation_state ON words.translations(state);
